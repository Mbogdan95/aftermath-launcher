<ProfileView
	xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		xmlns:vm="clr-namespace:Ignition.ViewModels"
    x:Class="Ignition.Views.ProfileView">

  <Design.DataContext>
    <vm:ProfileViewModel/>
  </Design.DataContext>

  <Canvas HorizontalAlignment="Right" VerticalAlignment="Top" Width="300" Height="130">
    <Canvas.Background>
      <SolidColorBrush Color="Black" Opacity=".1"></SolidColorBrush>
    </Canvas.Background>

    <StackPanel Orientation="Vertical">
      <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
          <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Foreground="White" TextWrapping="Wrap"
             MaxWidth="170" Margin="2" />
          <TextBlock Text="{Binding Credits}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Foreground="White" TextWrapping="Wrap"
                 MaxWidth="170" Margin="2" />
          <TextBlock Text="{Binding Warning}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Foreground="White" TextWrapping="Wrap"
                 MaxWidth="170" Margin="2" />
          <TextBlock Text="{Binding Level}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Foreground="White" TextWrapping="Wrap"
                 MaxWidth="170" Margin="2" />
          <TextBlock Text="{Binding Rank}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" Foreground="White" TextWrapping="Wrap"
                 MaxWidth="170" Margin="2"/>
        </StackPanel>

        <Image Source="/Assets/NepoFace.jpg" Width="100" Height="100" Margin="50 5 0 0" VerticalAlignment="Center"/>
      </StackPanel>
      <ProgressBar Margin="0 5 0 0" />
    </StackPanel>

